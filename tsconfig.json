{
    "compilerOptions": {
        "target": "es2018",
        "lib": [
            "ESNext"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "strict": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts",
        "vitest.config.ts",
        "tsup.config.ts",
        "wasmup.config.ts",
        "cross-release.config.ts"
    ]
}
